{
  "name": "@foundryvtt/publish",
  "description": "GitHub Action to publish packages (systems and modules) to FoundryVTT.com",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "foundryvtt",
    "GitHub",
    "GitHub Actions"
  ],
  "scripts": {
    "build": "rollup -c ./rollup.config.ts",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit"
  },
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/node": "^24.5.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "jiti": "^2.5.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "zod": "^4.1.8"
  }
}
